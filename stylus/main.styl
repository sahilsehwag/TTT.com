@import 'nib'
@import 'default.styl'
@import 'variables.styl'

normalize-base()
normalize-html5()

a
	text-decoration none

body
	margin 0px
	font-family "roboto"

.video-container		
	margin 0px
	overflow hidden
	height 100vh

video
	position absolute
	z-index 1
	width 100%
	height auto			

h1,div
	position relative
	z-index 2

header
	.first-layer
		width 100%
		height 100%
		background rgba(0,0,0,0.7)
		color rgba(255,255,255, 0.7)
		box-shadow 0px 3px 4px #737373		
	.jumbotron
		padding-top 10px		
		color #FFFFFF
		width 100%
		font-weight 100
		.input-group
			width 50%
			font-weight 400
			

nav.container-fluid
	background rgba(26,26,26,0.4)	
	margin-top -10px
	padding-right 0px
	li.logo
		font-weight 700
		font-size 30px
		color primaryColor	
	li		
		text-align center
		font-weight 500
		font-size 17px
		display inline
		padding 15px
		color rgba(255,255,255,0.95)//#FFFFFF		
		cursor pointer
	li:hover:not(.logo)		
		background rgba(51,133,255,1)
		transition all 0.2s linear 0s
		

.title	
	font-weight 100	
	font-family 'roboto'
	font-size 100px
	text-align center
	color #FFFFFF
	margin 30px
	margin-left 75px
	line-height 50px		
	padding-top 80px
	span
		font-weight 900
		color primaryColor
	small
		font-family 'Roboto'		
		color #FFFFFF
		opacity 0.9
		span
			color primaryColor
			

.input-group
	width 100%
	margin auto
	margin-top 5%
	padding-left 4%	
	.form-control
		color #FFFFFF
		background rgba(0,0,0,0)
		border-radius 0px
	.input-group-addon
		border-radius 0px
		
.ghost-btn
	border 1px solid rgba(51,133,255,0.9)
	background rgba(0,0,0,0)
	color rgba(51,133,255,0.9)
	padding 15px 10%
	font-size 25px
	font-family "roboto"
	font-weight 100
	display block	
	margin auto
	border-radius 5px
	transition all 0.3s ease-in
.ghost-btn:hover
	background rgba(51,133,255,0.9)	
	// background rgba(0,0,0,0.4)	
	transition all 0.5s ease-in
	color rgba(255,255,255,0.9)
	
h2
	text-align center
	margin-top 25vh
	margin-bottom 80px
	color footerColor
	// color rgba(255,255,255,0.9)